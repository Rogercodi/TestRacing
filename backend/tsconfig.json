{
    "compilerOptions": {
        "strict": true,
        "module": "commonjs",
        "newLine": "LF",
        "esModuleInterop": true,
        "target": "es6",
        "lib": ["es6"],
        "noImplicitAny": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "types": [
            "node"
        ],
    },
    "include": [
        "src/**/*.ts",
        "spec/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
